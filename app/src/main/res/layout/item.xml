<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="4dp"

        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/NameAsk"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ImageView"
            android:text="Name"
            android:textSize="20dp"
            android:textStyle="bold">


        </TextView>

        <TextView
            android:id="@+id/DateAsk"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameAsk"
            android:layout_toEndOf="@+id/ImageView"
            android:text="Date"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/HoursAsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DateAsk"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/HoursText"
            android:text="Hours"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/HoursText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DateAsk"
            android:layout_toEndOf="@+id/ImageView"
            android:text="Hours:"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>


        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="36dp"
            android:layout_height="65dp"
            android:padding="2dp">

        </ImageView>

        <TextView
            android:id="@+id/TakeOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GiveOption"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/TakeText"
            android:text="TakeOp"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/CityOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TakeOption"
            android:layout_marginStart="13dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/TakeText"
            android:text="CityOp"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/CityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TakeText"
            android:layout_marginStart="250dp"
            android:layout_marginTop="5dp"
            android:text="City:"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/TakeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GiveText"
            android:layout_marginStart="250dp"
            android:layout_marginTop="6dp"
            android:text="Take:"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/GiveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="3dp"
            android:text="Give:"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/GiveOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/GiveText"
            android:text="GiveOp"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>


    </RelativeLayout>
</androidx.cardview.widget.CardView>