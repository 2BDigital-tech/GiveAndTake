<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="@color/red"
        >

        <TextView
            android:id="@+id/NameAsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ImageView"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Name">


        </TextView>

        <TextView
        android:id="@+id/PhoneAsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ImageView"
        android:layout_below="@+id/NameAsk"
        android:textSize="15dp"
        android:text="Phone"
        android:textStyle="bold">

        </TextView>


        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:padding="2dp">

        </ImageView>

        <TextView
            android:id="@+id/TakeOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GiveOption"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/TakeText"
            android:text="TakeOp"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/CityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TakeText"
            android:layout_marginStart="220dp"
            android:layout_marginTop="3dp"
            android:text="City:"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/CityOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TakeOption"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/TakeText"
            android:text="CityOp"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/GiveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="220dp"
            android:text="Give:"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/GiveOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/GiveText"
            android:text="GiveOp"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/accpetbtn"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/GiveOption"
            android:background="@drawable/swapicon" />

        <Button
            android:id="@+id/infobtn"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/GiveOption"
            android:background="@drawable/infoicon"

            />

        <TextView
            android:id="@+id/TakeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GiveText"
            android:layout_marginStart="220dp"
            android:layout_marginTop="2dp"
            android:text="Take:"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>


    </RelativeLayout>
</androidx.cardview.widget.CardView>