<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/takeText"
                android:layout_width="175dp"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:hint="What You need?"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner_take"
                android:layout_width="209dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/giveText"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:hint="What You Give?"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner_give"
                android:layout_width="211dp"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="3dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hoursText"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:hint="How Much Time?"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner_hours"
                android:layout_width="211dp"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="3dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/EnterWords"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Other Information:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/freeText"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/createPostbtn"
            android:layout_width="367dp"
            android:layout_height="37dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="50dp"
            android:hint="Create Post"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="140dp"
            android:layout_height="37dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:hint="Cancel"
            android:textSize="15dp" />
    </LinearLayout>


</LinearLayout>