<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/giveText"
        android:layout_width="175dp"
        android:layout_height="42dp"
        android:hint="What You Give?"
        android:textSize="20dp" />

    <Button
        android:id="@+id/giveBtn"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@id/giveText"
        android:hint="Select"
        android:textSize="15dp" />

    <Button
        android:id="@+id/takeBtn"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@id/giveBtn"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp"

        android:layout_toEndOf="@id/takeText"
        android:hint="Select"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/takeText"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/giveText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:hint="What You need?"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/EnterWords"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/takeText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:hint="Other Information:"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/freeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EnterWords"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/createPostbtn"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/freeText"
        android:hint="Create Post"
        android:textSize="15dp" />


</RelativeLayout>